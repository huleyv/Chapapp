<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.andreijchildmonitorslave.MainActivity$PlaceholderFragment" >

    <EditText
        android:id="@+id/FirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Logo"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/LastName"
        android:background="@drawable/first_name"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="72dp"
        android:text="First Name"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/LastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/FirstName"
        android:layout_marginTop="2dp"
        android:background="@drawable/last_name"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="72dp"
        android:text="Last Name"
        android:visibility="invisible" />

    <Button
        android:id="@+id/MGPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Message"
        android:layout_alignRight="@+id/LastName"
        android:layout_below="@+id/LastName"
        android:layout_marginTop="2dp"
        android:background="@drawable/button_input_gps"
        android:minHeight="48dip"
        android:visibility="invisible" />

    <Button
        android:id="@+id/AGPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/MGPS"
        android:layout_alignRight="@+id/MGPS"
        android:layout_below="@+id/MGPS"
        android:layout_marginTop="2dp"
        android:background="@drawable/button_acquire_gps"
        android:minWidth="64dip"
        android:visibility="invisible" />

    <Button
        android:id="@+id/Message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/LastName"
        android:layout_below="@+id/AGPS"
        android:layout_marginTop="2dp"
        android:background="@drawable/button_notifications"
        android:visibility="invisible" />

    <Button
        android:id="@+id/SyncDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:background="@drawable/button_sync_device"
        android:minWidth="100dip" />

    <TextView
        android:id="@+id/Data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Map"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Logo"
        android:layout_alignRight="@+id/Message"
        android:layout_below="@+id/Message"
        android:layout_marginTop="2dp"
        android:background="@drawable/button_map"
        android:minHeight="48dip"
        android:minWidth="64dip"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/MGPS"
        android:layout_below="@+id/MGPS"
        android:src="@drawable/chapapp" />

</RelativeLayout>